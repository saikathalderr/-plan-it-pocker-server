{
  "name": "plan-it-pocker-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "nodemon src/index.ts",
    "build": "rimraf dist && tsc",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist",
    "dev": "concurrently \"yarn tsc --watch\" \"nodemon -q dist/index.js\""
  },
  "dependencies": {
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "prettier": "^2.8.4",
    "socket.io": "^4.6.0"
  },
  "devDependencies": {
    "@types/config": "^3.3.0",
    "@types/express": "^4.17.17",
    "@types/node": "^18.13.0",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20",
    "pre-commit": "^1.2.2",
    "rimraf": "^4.4.0",
    "typescript": "^4.9.5"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ]
}
